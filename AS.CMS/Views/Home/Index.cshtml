@using AS.CMS.Domain.Base;
@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Layout/_Main.cshtml";
    List<News> newsList = Model;
}

<article class="content dashboard-page">
    <section class="section">
        <div class="row sameheight-container">
            <div class="col col-xs-12 col-sm-12 col-md-6 col-xl-5 stats-col">
                <div class="card sameheight-item stats" data-exclude="xs">
                    <div class="card-block">
                        <div class="title-block">
                            <h4 class="title">
                                İstatistikler
                            </h4>
                            <p class="title-description">
                                Uygulama üzerindeki genel istatistikleri buradan takip edebilirsiniz.
                            </p>
                        </div>
                        <div class="row row-sm stats-container">
                            <div class="col-xs-12 col-sm-6 stat-col">
                                <div class="stat-icon"> <i class="fa fa-pencil-square-o"></i> </div>
                                <div class="stat">
                                    <div class="value"> 4 </div>
                                    <div class="name"> Aktif İçerik </div>
                                </div> <progress class="progress stat-progress" value="75" max="100">
                                    <div class="progress">
                                        <span class="progress-bar" style="width: 75%;"></span>
                                    </div>
                                </progress>
                            </div>
                            <div class="col-xs-12 col-sm-6 stat-col">
                                <div class="stat-icon"> <i class="fa fa-bullhorn"></i> </div>
                                <div class="stat">
                                    <div class="value"> 6 </div>
                                    <div class="name"> Aktif Haber & Duyuru </div>
                                </div> <progress class="progress stat-progress" value="25" max="100">
                                    <div class="progress">
                                        <span class="progress-bar" style="width: 25%;"></span>
                                    </div>
                                </progress>
                            </div>
                            <div class="col-xs-12 col-sm-6  stat-col">
                                <div class="stat-icon"> <i class="fa fa-th-large"></i> </div>
                                <div class="stat">
                                    <div class="value"> 7 </div>
                                    <div class="name"> Aktif Menü </div>
                                </div> <progress class="progress stat-progress" value="60" max="100">
                                    <div class="progress">
                                        <span class="progress-bar" style="width: 60%;"></span>
                                    </div>
                                </progress>
                            </div>
                            <div class="col-xs-12 col-sm-6  stat-col">
                                <div class="stat-icon"> <i class="fa fa-users"></i> </div>
                                <div class="stat">
                                    <div class="value"> 2 </div>
                                    <div class="name"> Aktif Kullanıcı </div>
                                </div> <progress class="progress stat-progress" value="34" max="100">
                                    <div class="progress">
                                        <span class="progress-bar" style="width: 34%;"></span>
                                    </div>
                                </progress>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col col-xs-12 col-sm-12 col-md-6 col-xl-7 history-col">
                <div class="card sameheight-item items" data-exclude="xs,sm,lg">
                    <div class="card-header bordered">
                        <div class="header-block">
                            <h3 class="title">
                                Son 5 Haber
                            </h3> <a href="@Url.Action("yeni-haber-ekle","haber")" class="btn btn-primary btn-sm rounded">
                                Yeni Ekle
                            </a>
                        </div>            
                    </div>
                    <ul class="item-list striped">
                        <li class="item item-list-header hidden-sm-down">
                            <div class="item-row">
                                <div class="item-col item-col-header fixed item-col-img xs"></div>
                                <div class="item-col item-col-header item-col-author">
                                    <div> <span>Başlık</span> </div>
                                </div>
                                <div class="item-col item-col-header item-col-author">
                                    <div> <span>Permalink</span> </div>
                                </div>
                                <div class="item-col item-col-header item-col-author">
                                    <div> <span>Yayın Durumu</span> </div>
                                </div>
                                <div class="item-col item-col-header item-col-date">
                                    <div> <span>Oluşturulma Tarihi</span> </div>
                                </div>
                                <div class="item-col item-col-header fixed item-col-actions-dropdown"> </div>
                            </div>
                        </li>
                        @foreach (var newsItem in Model)
                        {
                            <li class="item">
                                <div class="item-row">
                                    <div class="item-col item-col-author">
                                        <div class="item-heading">Başlık</div>
                                        <div>
                                            <a href="@Url.Action("yeni-haber-ekle", "haber", new { newsID = newsItem.ID })" class="">
                                                <h4 class="item-title">@newsItem.Title</h4>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="item-col item-col-author">
                                        <div class="item-heading">Permalink</div>
                                        <div class="no-overflow"> <a href="@Url.Action("yeni-haber-ekle", "haber", new { newsID = newsItem.ID })">@newsItem.Permalink</a> </div>
                                    </div>
                                    <div class="item-col item-col-author">
                                        <div class="item-heading">Yayın Durumu</div>
                                        <div class="no-overflow"> <a href="@Url.Action("yeni-haber-ekle", "haber", new { newsID = newsItem.ID })">@(Html.Raw(newsItem.IsPublished ? "Yayında" : "Yayında Değil"))</a> </div>
                                    </div>
                                    <div class="item-col item-col-date">
                                        <div class="item-heading">Oluşturulma Tarihi</div>
                                        <div class="no-overflow"> @newsItem.CreatedDate </div>
                                    </div>
                                    <div class="item-col fixed item-col-actions-dropdown">
                                        <div class="item-actions-dropdown">
                                            <a class="item-actions-toggle-btn">
                                                <span class="inactive">
                                                    <i class="fa fa-cog"></i>
                                                </span> <span class="active">
                                                    <i class="fa fa-chevron-circle-right"></i>
                                                </span>
                                            </a>
                                            <div class="item-actions-block">
                                                <ul class="item-actions-list">
                                                    <li>
                                                        <a class="edit" href="@Url.Action("yeni-haber-ekle", "haber", new { newsID = newsItem.ID })"><i class="fa fa-pencil"></i> </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </section>
</article>