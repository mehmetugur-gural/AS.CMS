@using AS.CMS.Domain.Base.Event;
@model IList<EventType>
@{
    ViewBag.Title = "Etkinlik Kota";
    Layout = "~/Views/Layout/_ListBase.cshtml";
}

<div class="card items">
    <ul class="item-list striped">
        <li class="item item-list-header hidden-sm-down">
            <div class="item-row">
                <div class="item-col item-col-header item-col-author">
                    <div> <span>Etkinlik Adı</span> </div>
                </div>
                <div class="item-col item-col-header item-col-author">
                    <div> <span>Meslek</span> </div>
                </div>
                <div class="item-col item-col-header item-col-author">
                    <div> <span>Kota Sayısı</span> </div>
                </div>
                <div class="item-col item-col-header fixed item-col-actions-dropdown"> </div>
            </div>
        </li>

        @foreach (var eventTypeItem in Model)
        {
            <li class="item">
                <div class="item-row">
                    <div class="item-col item-col-author">
                        <div class="item-heading">Adı</div>
                        <div>
                            <a href="@Url.Action("yeni-etkinlik-tipi-ekle", "etkinlik", new { eventTypeID = eventTypeItem.ID })" class="">
                                <h4 class="item-title">@eventTypeItem.Name</h4>
                            </a>
                        </div>
                    </div>
                    <div class="item-col item-col-author">
                        <div class="item-heading">Soyad</div>
                        <div class="no-overflow"> <a href="@Url.Action("yeni-etkinlik-tipi-ekle", "etkinlik", new { eventTypeID = eventTypeItem.ID })" class="">@eventTypeItem.Description</a> </div>
                    </div>
                    <div class="item-col fixed item-col-actions-dropdown">
                        <div class="item-actions-dropdown">
                            <a class="item-actions-toggle-btn">
                                <span class="inactive">
                                    <i class="fa fa-cog"></i>
                                </span> <span class="active">
                                    <i class="fa fa-chevron-circle-right"></i>
                                </span>
                            </a>
                            <div class="item-actions-block">
                                <ul class="item-actions-list">
                                    <li>
                                        <a class="edit" title="Düzenle" href="@Url.Action("yeni-etkinlik-tipi-ekle", "etkinlik", new {  eventTypeID = eventTypeItem.ID })"> <i class="fa fa-pencil"></i> </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>