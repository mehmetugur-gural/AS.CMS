@using AS.CMS.Domain.Base;
@model Profession
@section CustomCSS
{
    <link rel="stylesheet" href="@Url.Content("~/Assets/Css/datepicker.min.css")">
}
@{
    ViewBag.Title = "Meslekler";
    Layout = "~/Views/Layout/_Main.cshtml";
    Profession currentProfession = Model;
}
<article class="content item-editor-page">
    <div class="title-block">
        <h3 class="title">
            Yeni Meslek Ekle <span class="sparkline bar" data-type="bar"></span>
        </h3>
    </div>
    <form id="saveEventTypeForm" method="post" action="@Url.Action("SaveProfession")" name="item">
        <input type="hidden" id="ID" name="ID" value="@currentProfession.ID" />

        <div class="card card-block">
            <div class="form-group row">
                <label class="col-sm-2 form-control-label text-xs-right">
                    Adı:
                </label>
                <div class="col-sm-10">
                    <input type="text" id="Title" name="Title" class="form-control boxed" placeholder="İsim Giriniz" value="@currentProfession.Title">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 form-control-label text-xs-right">
                    Açıklama:
                </label>
                <div class="col-sm-10">
                    <input type="text" id="Description" name="Description" class="form-control boxed" placeholder="Açıklama Giriniz" value="@currentProfession.Description">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 form-control-label text-xs-right">
                    Aktif:
                </label>
                <div class="col-sm-10">
                    <select id="IsActive" name="IsActive" class="c-select form-control boxed">
                        <option value="true" @Html.Raw(currentProfession.IsActive ? "selected" : string.Empty)>Evet</option>
                        <option value="false" @Html.Raw(!currentProfession.IsActive ? "selected" : string.Empty)>Hayır</option>
                    </select>
                </div>
            </div>    
            <div class="form-group row">
                <div class="col-sm-10 col-sm-offset-2">
                    <button type="submit" class="btn btn-primary">
                        Kaydet
                    </button>
                </div>
            </div>
        </div>
    </form>
</article>