@using AS.CMS.Domain.Base;
@model IList<Member>
@{
    ViewBag.Title = "Üyeler";
    Layout = "~/Views/Layout/_ListBase.cshtml";
}

<div class="card items">
    <ul class="item-list striped">
        <li class="item item-list-header hidden-sm-down">
            <div class="item-row">
                <div class="item-col item-col-header item-col-author">
                    <div> <span>İsim</span> </div>
                </div>
                <div class="item-col item-col-header item-col-author">
                    <div> <span>Soyisim</span> </div>
                </div>
                <div class="item-col item-col-header item-col-author">
                    <div> <span>Email</span> </div>
                </div>
                <div class="item-col item-col-header item-col-date">
                    <div> <span>Oluşturulma Tarihi</span> </div>
                </div>
                <div class="item-col item-col-header fixed item-col-actions-dropdown"> </div>
            </div>
        </li>

        @foreach (var memberItem in Model)
        {
            <li class="item">
                <div class="item-row">
                    <div class="item-col item-col-author">
                        <div class="item-heading">İsim</div>
                        <div>
                            <a href="@Url.Action("yeni-uye-ekle", "uye", new { memberID = memberItem.ID })" class="">
                                <h4 class="item-title">@memberItem.FirstName</h4>
                            </a>
                        </div>
                    </div>
                    <div class="item-col item-col-author">
                        <div class="item-heading">Soyisim</div>
                        <div class="no-overflow"> <a href="@Url.Action("yeni-uye-ekle", "uye", new { memberID = memberItem.ID })">@memberItem.LastName</a> </div>
                    </div>
                    <div class="item-col item-col-author">
                        <div class="item-heading">Email</div>
                        <div class="no-overflow"> <a href="@Url.Action("yeni-uye-ekle", "uye", new { memberID = memberItem.ID })">@memberItem.Email</a> </div>
                    </div>
                    <div class="item-col item-col-date">
                        <div class="item-heading">Oluşturulma Tarihi</div>
                        <div class="no-overflow"> @memberItem.CreatedDate </div>
                    </div>
                    <div class="item-col fixed item-col-actions-dropdown">
                        <div class="item-actions-dropdown">
                            <a class="item-actions-toggle-btn">
                                <span class="inactive">
                                    <i class="fa fa-cog"></i>
                                </span> <span class="active">
                                    <i class="fa fa-chevron-circle-right"></i>
                                </span>
                            </a>
                            <div class="item-actions-block">
                                <ul class="item-actions-list">
                                    <li>
                                        <a class="edit" href="@Url.Action("yeni-uye-ekle", "uye", new { memberID = memberItem.ID })"> <i class="fa fa-pencil"></i> </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>