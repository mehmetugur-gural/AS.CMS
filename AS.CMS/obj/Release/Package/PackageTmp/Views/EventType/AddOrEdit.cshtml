@using AS.CMS.Domain.Base.Event;
@model EventType
@section CustomCSS
{
    <link rel="stylesheet" href="@Url.Content("~/Assets/Css/datepicker.min.css")">
}
@{
    ViewBag.Title = "Etkinlik Tipleri";
    Layout = "~/Views/Layout/_Main.cshtml";
    EventType currentEventType = Model;
}
<article class="content item-editor-page">
    <div class="title-block">
        <h3 class="title">
            Yeni Etkinlik Tipi Ekle <span class="sparkline bar" data-type="bar"></span>
        </h3>
    </div>
    <form id="saveEventTypeForm" method="post" action="@Url.Action("SaveEventType")" name="item">
        <input type="hidden" id="ID" name="ID" value="@currentEventType.ID" />

        <div class="card card-block">
            <div class="form-group row">
                <label class="col-sm-2 form-control-label text-xs-right">
                    Adı:
                </label>
                <div class="col-sm-10">
                    <input type="text" id="Name" name="Name" class="form-control boxed" placeholder="İsim Giriniz" value="@currentEventType.Name">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 form-control-label text-xs-right">
                    Açıklama:
                </label>
                <div class="col-sm-10">
                    <input type="text" id="Description" name="Description" class="form-control boxed" placeholder="Açıklama Giriniz" value="@currentEventType.Description">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 form-control-label text-xs-right">
                    Aktif:
                </label>
                <div class="col-sm-10">
                    <select id="IsActive" name="IsActive" class="c-select form-control boxed">
                        <option value="true" @Html.Raw(currentEventType.IsActive ? "selected" : string.Empty)>Evet</option>
                        <option value="false" @Html.Raw(!currentEventType.IsActive ? "selected" : string.Empty)>Hayır</option>
                    </select>
                </div>
            </div>    
            <div class="form-group row">
                <div class="col-sm-10 col-sm-offset-2">
                    <button type="submit" class="btn btn-primary">
                        Kaydet
                    </button>
                </div>
            </div>
        </div>
    </form>
</article>